<div class="wrap">
    <h1>
        Settings
    </h1>
    <p>
        Configure here your Premier Newsletter
    </p>
    <form method="POST" action="{{panel_url}}&action=update&settings_id={{settings.id}}">
        <h2 class="title">Mailgun</h2>
        <table class="form-table">
            <tbody>
                <tr>
                    <th scope="row">
                        <label for="private_key">Private Key
                            <span class="description">(required)</span>
                        </label>
                    </th>
                    <td colspan="2">
                        <input class="regular-text" name="mailgun_private_key" type="text" value="{{settings.mailgun_private_key}}" required autocapitalize="none" autocorrect="off" maxlength="60">
                    </td>
                </tr>
            </tbody>
        </table>
        <h2 class="title">Others</h2>
        <table class="form-table">
            <tbody>
                <tr>
                    <th scope="row">
                        <label for="private_key">Others
                            <span class="description">(required)</span>
                        </label>
                    </th>
                    <td colspan="2">
                        <input class="regular-text"/>
                    </td>
                </tr>
            </tbody>
        </table>
        <p class="submit">
            <input type="submit" class="button button-primary" value="Update">
        </p>
    </form>
</div>
